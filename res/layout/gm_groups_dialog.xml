<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/base_padding"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView android:id="@+id/group_policy" 
      android:maxLines="1" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" 
      android:text="@string/calib_gm_policy"
    />

    <LinearLayout 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      android:layout_marginTop="@dimen/marginvbig"
      android:layout_gravity="right"
      android:gravity="right"
      >
      <Button android:id="@+id/group_reset" 
        style="@style/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/group_reset"
        android:layout_marginRight="@dimen/marginh"
      />
      <Button android:id="@+id/group_ok"
        style="@style/button_default"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/button_ok"
        android:layout_marginRight="@dimen/marginh"
      />
      <Button android:id="@+id/group_cancel"
        style="@style/button_default"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/button_cancel"
      />
    </LinearLayout>
</LinearLayout>

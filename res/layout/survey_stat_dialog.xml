<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
  style="@style/base_padding"
  android:layout_width="match_parent" 
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >

    <TextView android:id="@+id/stat_leg"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_duplicate"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_surface"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_splay"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_station"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_survey_len"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <TextView android:id="@+id/stat_loop"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/stat_component"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <TextView android:id="@+id/stat_devices"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <TextView android:id="@+id/stat_dates"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <LinearLayout 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/marginv"
      >
      <!-- lint: This tag and its children can be replaced by one <TextView/> and a compound drawable -->
      <ImageView android:id="@+id/histogramG"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marginsmall"
        android:contentDescription="@string/error_distribution"
        />
      <TextView android:id="@+id/stat_stddev_g"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    </LinearLayout>

    <LinearLayout 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <!-- lint: This tag and its children can be replaced by one <TextView/> and a compound drawable -->
      <ImageView android:id="@+id/histogramM"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marginsmall"
        android:contentDescription="@string/error_distribution"
        />
      <TextView android:id="@+id/stat_stddev_m"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />
    </LinearLayout>

    <LinearLayout 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <!-- lint: This tag and its children can be replaced by one <TextView/> and a compound drawable -->
      <ImageView android:id="@+id/histogramD"
        android:layout_marginTop="@dimen/margintiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marginsmall"
        android:contentDescription="@string/error_distribution"
      />
      <TextView android:id="@+id/stat_stddev_dip"
        android:layout_marginTop="@dimen/marginv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
      />
    </LinearLayout>

    <LinearLayout android:id="@+id/help"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/marginv"
      >
      <Button android:id="@+id/button_help"
          style="@style/button_empty"
          android:text="@string/button_help"
      />
      <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:gravity="end"
        >
        <Button android:id="@+id/btn_back"
          style="@style/button_default"
          android:text="@string/button_close"
          />
      </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>

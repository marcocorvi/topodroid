<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  style="@style/base_padding"
  android:layout_width="match_parent" 
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >

  <TextView android:id="@+id/label_caption"
    android:layout_marginTop="@dimen/margintiny"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="@string/label_text"
    />
      				  
  <EditText android:id="@+id/label_text"
    style="@style/edit_text"
    android:layout_marginTop="@dimen/margintiny"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:singleLine="true"
    android:inputType="text"
    />
      	
  <LinearLayout 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="horizontal" 
    android:layout_marginTop="@dimen/marginvbig"
    >
    <Button android:id="@+id/label_cancel"
      style="@style/button_default"
      android:text="@string/button_cancel"
      android:layout_marginRight="@dimen/marginh"
    />
    <Button android:id="@+id/label_ok"
      style="@style/button_default"
      android:text="@string/button_ok"
    />
  </LinearLayout>

</LinearLayout>

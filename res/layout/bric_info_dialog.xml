<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/base_padding"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView android:id="@+id/bric_address" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />

    <TextView android:id="@+id/bric_device" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />

    <TextView android:id="@+id/bric_ble" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />

    <TextView android:id="@+id/bric_fw" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />
    <TextView android:id="@+id/bric_hw" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />
    <TextView android:id="@+id/bric_battery" 
      android:layout_marginTop="@dimen/margintiny"
      android:layout_width="200dp"
    	android:ems="25"
      android:layout_height="wrap_content" 
      android:singleLine="true"
    />

  <!-- LinearLayout 
     android:layout_width="match_parent" 
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginTop="@dimen/margintiny"
     android:paddingBottom="@dimen/paddingv" -->

   <!-- /LinearLayout -->

   <LinearLayout android:id="@+id/help"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/marginvbig"
      android:gravity="start"
      >
    <Button android:id="@+id/button_help"
        style="@style/button_empty"
        android:text="@string/button_help"
    />
    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:gravity="end"
      >
      <Button android:id="@+id/button_cancel"
        style="@style/button_default"
        android:text="@string/button_close"
        />
    </LinearLayout>
  </LinearLayout>

  </LinearLayout>
</ScrollView>

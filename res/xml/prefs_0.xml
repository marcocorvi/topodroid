       android:summary="@string/pref_locale_summary"
       android:defaultValue=""
       android:entries="@array/locale"
       android:entryValues="@array/localeValue"
       / -->

  <Preference
     android:key="DISTOX_IMPORT_EXPORT_PREF"
     android:title="@string/pref_cat_import_export"
     android:textColor="@color/pref_category"
     />

  <Preference
     android:key="DISTOX_SURVEY_PREF"
     android:title="@string/pref_cat_survey"
     />

  <Preference
     android:key="DISTOX_PLOT_PREF"
     android:title="@string/pref_cat_drawing"
     />

  <Preference
     android:key="DISTOX_DEVICE_PREF"
     android:title="@string/pref_cat_device"
     />


<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Preference
       android:key="DISTOX_CWD"
       android:title="@string/pref_cwd_title"
       / -->

  <com.topodroid.DistoX.MyEditPreference
       android:key="DISTOX_TEXT_SIZE"
       android:title="@string/pref_text_size_title"
       android:summary="@string/pref_text_size_summary"
       android:dialogTitle="@string/pref_text_size_title"
       android:dialogMessage="@string/pref_text_size_message"
       android:defaultValue="@string/default_textsize"
       android:inputType="number"
       />

  <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_SIZE_BUTTONS"
       android:title="@string/pref_size_buttons_title"
       android:summary="@string/pref_size_buttons_summary"
       android:defaultValue="@string/default_buttonsize"
       android:entries="@array/sizeButtons"
       android:entryValues="@array/sizeButtonsValue"
       />

  <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_EXTRA_BUTTONS"
       android:summary="@string/pref_extra_buttons_summary"
       android:title="@string/pref_extra_buttons_title"
       android:defaultValue="1"
       android:entries="@array/extraButtons"
       android:entryValues="@array/extraButtonsValue"
       />

  <CheckBoxPreference
       android:key="DISTOX_MKEYBOARD"
       android:summary="@string/pref_mkeyboard_summary"
       android:title="@string/pref_mkeyboard_title"
       android:defaultValue="true"
       />

  <!-- CheckBoxPreference
